// Prisma Client Generator
generator client {
  provider = "prisma-client-js"
}

// Database Connection
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//
// ───────────────────────────────────────────
//  USER (exists already)
// ───────────────────────────────────────────
//

model User {
  id       String  @id @default(cuid())
  email    String  @unique
  password String
  role     String // "tailor" | "customer"
  orders   Order[]
  tailor   Tailor? // 1:1 relation → ein User kann ein Schneidershop sein
}

//
// ───────────────────────────────────────────
//  TAILOR (Schneiderprofil − optionales User-Addon)
// ───────────────────────────────────────────
//

model Tailor {
  id        String   @id @default(cuid())
  userId    String   @unique
  name      String
  bio       String?
  country   String? // Land des Schneiders
  languages String[] @default([]) // z.B. ["en", "tr", "de"]
  rating    Float? // Durchschnittsbewertung

  user     User      @relation(fields: [userId], references: [id])
  products Product[]
}

//
// ───────────────────────────────────────────
//  PRODUCT (Produkte des Schneiders)
// ───────────────────────────────────────────
//

model Product {
  id          String   @id @default(cuid())
  tailorId    String
  title       String
  price       Float
  description String?
  category    String?
  createdAt   DateTime @default(now())

  tailor     Tailor         @relation(fields: [tailorId], references: [id])
  images     ProductImage[]
  orderItems OrderItem[]
}

//
// ───────────────────────────────────────────
//  PRODUCT IMAGES (für Supabase Storage)
// ───────────────────────────────────────────
//

model ProductImage {
  id        String @id @default(cuid())
  productId String
  url       String // Supabase public URL oder signed URL
  position  Int    @default(0)

  product Product @relation(fields: [productId], references: [id])
}

//
// ───────────────────────────────────────────
//  ORDER (exists already) + Erweiterung
// ───────────────────────────────────────────
//

model Order {
  id        String      @id @default(cuid())
  createdAt DateTime    @default(now())
  user      User        @relation(fields: [userId], references: [id])
  userId    String
  items     OrderItem[]
}

//
// ───────────────────────────────────────────
//  ORDER ITEMS (Produkte in einer Bestellung)
// ───────────────────────────────────────────
//

model OrderItem {
  id        String @id @default(cuid())
  orderId   String
  productId String
  quantity  Int    @default(1)
  unitPrice Float // Preis pro Stück zum Zeitpunk der Bestellung

  order   Order   @relation(fields: [orderId], references: [id])
  product Product @relation(fields: [productId], references: [id])
}
